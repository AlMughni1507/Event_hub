{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd .. && npm ci && npm run build && cd server && npm ci"
  },
  "deploy": {
    "startCommand": "NODE_ENV=production node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

